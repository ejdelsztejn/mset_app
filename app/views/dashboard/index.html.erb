<center class="page-header">
  <h2>Welcome, <%= current_user.full_name %>! </h2>
  <%= render partial: '/partials/flash' %>
</center>
<div class="grid-container">
  <div class="sidebar">
    <div class="profile">
      <h5>Profile</h5>
      <% if current_user.birthdate.nil? || current_user.birthdate.empty? %>
        <p><strong>Date of birth:</strong> not saved</p>
      <% else %>
        <p><strong>Date of birth:</strong> <%= current_user.birthdate %></p>
      <% end %>
      <% if current_user.weight.nil? %>
        <p><strong>Weight:</strong> not saved</p>
      <% else %>
        <p><strong>Weight:</strong> <%= current_user.weight %> lbs</p>
      <% end %>
      <%= button_to 'Edit Profile', '/profile/edit', method: :get %>
    </div>
    <div class="med-list">
      <h5>Medication List</h5>
      <% if current_user.medications.empty? %>
        <p>You don't have any saved medications.</p>
        <%= button_to "Add New Medication", "/medications/new", method: :get %>
      <% else %>
        <ul>
           <% current_user.medications.each do |medication| %>
             <li><%= medication.brand_name %></li>
           <% end %>
         </ul>
         <%= button_to "Edit Medication List", "/medications/edit", method: :get %>
         <%= button_to "Add New Medication", "/medications/new", method: :get %>
      <% end %>
    </div>
  </div>
  <div class="main">

    <div class="log-form">
      <h3>Log a Symptom:</h3><br>
      <%= form_tag logs_path, method: "post" do %>
        <%= label_tag "What symptom did you experience?"%><br>
        <%= text_field_tag :symptom, nil, placeholder: 'Search Symptoms' %>

        <%= label_tag "When?"%><br>
        <%= datetime_field_tag :when %><br>

        <%= label_tag "Any additional notes?"%><br>
        <%= text_area_tag :note %><br>

        <%= submit_tag 'Save', class: "button" %>
      <% end %>
    </div>

    <div class="recent-logs">
      <h3>Recent Symptom Logs</h3>
      <div class="log-list">
        <% if current_user.logs.empty? %>
          <p>You have not yet recorded any symptoms.</p>
        <% else %>
          <div class="row">
            <p class="col">
              <%= label_tag "What symptom did you experience?"%> <br>
              <%= text_field_tag :symptom, nil, placeholder: 'Search Symptoms' %>
            </p>
            <p class="col">
              <%= label_tag "When?"%> <br>
              <%= datetime_field_tag :when %> <br><br>
            </p>
            <p>
              <%= label_tag "Any additional notes?"%><br>
              <%= text_area_tag :note %> <br>
            </p>
            <p class="col"><%= submit_tag 'Save', class: "button" %></p>
          </div>
          <% current_user.most_recent_logs.each do |log| %>
            <div class="row">
              <p class="col"><%= log.symptom.description %></p>
              <p class="col"><%= log.when %></p>
              <p class="col"><%= log.note %></p><br>
            </div>
          <% end %>
          <%= button_to 'See All Logs', '/logs', method: 'get'%>
        <% end %>
      </div>
    </div>
